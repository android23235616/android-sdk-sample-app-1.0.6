<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRScanningActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grp_qr"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back_taxi"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_qr"
            android:scaleType="centerCrop"
            android:alpha="0.85"
            />



        <Button
            android:id="@+id/scan_qr"
            android:textSize="36dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:textColor="@android:color/white"
            android:background = "@drawable/back_btn_qr"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Scan QR"
            android:elevation="10dp"
            android:textAllCaps="false"
            />


    </RelativeLayout>

    <Button
        android:id="@+id/end_trip"
        android:textSize="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/grp_qr"
        android:layout_centerHorizontal="true"
        android:text="END TRIP" />

    <Button
        android:id="@+id/pay"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/end_trip"
        android:layout_centerHorizontal="true"
        android:text="PAY ONLINE" />


</RelativeLayout>
